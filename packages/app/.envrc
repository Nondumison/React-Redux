#!/bin/sh

# If installed, use NVM to enable correct version of Node.js
if [ ! -z "${NVM_DIR+x}" ]; then
	[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh" # This loads nvm
	if [ -e "../../.nvmrc" ]; then nvm use || nvm install; fi # Use/install specific version of node if provided
else
	echo ''
	echo 'Consider installing `nvm'' (Node Version Manager)'
	echo 'https://github.com/creationix/nvm'
	echo ''
	echo 'Otherwise, please inspect the .nvmrc file to see which version of'
	echo 'Node.js is recommended.'
	echo ''
fi


# Prepend local node CLI modules to PATH
if command -v npm >/dev/null 2>&1; then
	PATH="$(npm bin):$PATH"
	export PATH
fi
